<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KrolLewFragment"
    android:background="@drawable/sample">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/z5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Król Lew"
            android:textSize="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"
            android:textColor="#F1F1F1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Animacja, Familijny Przygodowy, 118 min"
            android:textSize="12dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"
            android:textColor="#F1F1F1"
            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Godziny seansów"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="210dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Dubbing"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="260dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="11:00"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/Dub_KL_Button_11_00"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="14:20"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/Dub_KL_Button_14_20"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="16:00"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="220dp"
            android:id="@+id/Dub_KL_Button_16_00"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Napisy"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="13:10"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/Nap_KL_Button_13_10"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="17:20"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/Nap_KL_Button_17_20"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="19:00"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="220dp"
            android:id="@+id/Nap_KL_Button_19_00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simba jest młodym, prawowitym następcą tronu po swoim ojcu – królu Mufasie. Jednak nie wszyscy mieszkańcy królestwa cieszą się z jego narodzin. Następcą Mufasy był bowiem dotąd jego brat – Skaza, który nie zamierza tak łatwo oddać władzy. Knując spisek i posuwając się do zdrady, doprowadza do tragedii, w wyniku której to jemu przypada w udziale tron. Simba zostaje wygnany, ale pozostając wierny naukom swojego ojca, Mufasy, bierze sobie do serca swoje królewskie przeznaczenie. Z pomocą dwójki nowopoznanych przyjaciół zamierza odzyskać należne dziedzictwo. Wcześniej musi jednak odszukać swoją drogę ku dorosłości"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="370dp"


            />



    </RelativeLayout>

</FrameLayout>