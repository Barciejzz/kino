<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Email_nazwiskokFragment"
    android:background="@drawable/sample">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Potwierdzenie rezerwacji"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />



    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/ImieNazwisko"
        android:hint="Imie i Nazwisko"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/emailen"
        android:hint="Email"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/NrTel"
        android:hint="Numer telefonu"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/zatwierdz"
        android:text="PotwierdÅº"
        android:textSize="20dp"
        android:background="@drawable/sample"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        />

</FrameLayout>