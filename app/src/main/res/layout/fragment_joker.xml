<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokerFragment"
    android:background="@drawable/sample">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/aaa2"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Joker"
            android:textSize="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Dramat, Kryminał, 122 min"
            android:textSize="12dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Godziny seansów"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="210dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Dubbing"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="260dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="13:00"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/Dub_Jo_Button_13_00"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="15:40"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/Dub_Jo_Button_15_40"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="17:00"
            android:textSize="20dp"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="220dp"
            android:id="@+id/Dub_Jo_Button_17_00"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Napisy"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="320dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="16:30"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="100dp"
            android:id="@+id/Nap_Jo_16_30"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="18:20"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/Nap_Jo_Button_18_20"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/sample"
            android:text="21:00"
            android:textSize="20dp"
            android:layout_marginTop="313dp"
            android:layout_marginLeft="220dp"
            android:id="@+id/Nap_Jo_Button_21_00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historia jednego z cieszących się najgorszą sławą superprzestępców uniwersum DC — Jokera. Przedstawiony przez Phillipsa obraz śledzi losy kultowego czarnego charakteru, człowieka zepchniętego na margines. To nie tylko kontrowersyjne studium postaci, ale także opowieść ku przestrodze w szerszym kontekście."
            android:layout_marginLeft="10dp"
            android:layout_marginTop="370dp"


            />




    </RelativeLayout>
</FrameLayout>